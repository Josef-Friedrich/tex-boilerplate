{
  "files.exclude": {
    "**/_minted*/": true,
    "**/*.aux": true,
    "**/*.fdb_latexmk": true,
    "**/*.fls": true,
    "**/*.glo": true,
    "**/*.gls": true,
    "**/*.hd": true,
    "**/*.idx": true,
    "**/*.ilg": true,
    "**/*.ind": true,
    "**/*.log": true,
    "**/*.out": true,
    "**/*.pdf": true,
    "**/*.synctex.gz": true,
    "**/*.synctex": true,
    "**/*.tar.gz": true,
    "**/*.toc": true
  },
  "Lua.diagnostics.globals": [
    // LuaTeX
    "callback", // 9 LUA callbacks
    "fontloader", // 12 The fontloader
    "img", // 11.1 The img library
    "kpse", // 10.7 The kpse library
    "lua", // 10.1 The lua library
    "luaharfbuzz", // 13.1 The luaharfbuzz library
    "node", // 8.7 The node library
    "status", // 10.2 The status library
    "tex", // 10.3 The tex library
    "texconfig", // 10.4 The texconfig table
    "texio", // 10.5 The texio library
    "token", // 10.6 The token library
    // luatexbase
    "luatexbase",
    // busted
    "describe",
    "it",
    "setup",
    "teardown"
  ],
  // https://github.com/sumneko/lua-language-server/wiki/Libraries
  "Lua.workspace.library": [
    "${3rd}/busted/library",
    "~/repos/tex/lua-api/library",
    "~/repos/tex/cloze/cloze.lua",
    "~/repos/tex/farbe/farbe.lua",
    "~/repos/tex/luakeys/luakeys.lua",
    "~/repos/tex/nodetree/nodetree.lua"
  ],
  "latex-workshop.latex.autoBuild.run": "never",
  "Lua.format.enable": true,
  "[lua]": {
    "editor.defaultFormatter": "Koihik.vscode-lua-format"
  },
}
